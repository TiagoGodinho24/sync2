@model TFSSincronizador.Models.MappingType

@{
    ViewData["Title"] = "CreateTypes";
}

<h1>CreateTypes</h1>

<h4>MappingType</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="CreateTypes">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="MappingMode" class="control-label"></label>
                <select asp-for="MappingMode" class="form-select form-select-sm" aria-label=".form-select-sm example">
                     <option selected>Copy Values</option>
                     <option value="1">Map Values</option>
                </select><br />
            </div>

            <div class="form-group">
                <label asp-for="MappingDirection" class="control-label"></label>
                <select asp-for="MappingDirection" class="form-select form-select-sm" aria-label=".form-select-sm example">
                          <option selected>TFS To Jira</option>
                          <option value="1">Jira To TFS</option>
                          <option value="2">Both</option>    
                </select><br />
            </div>
           
            <div class="form-group">
                <label asp-for="TFSTypeId" class="control-label"></label>
                <select asp-for="TFSTypeId" class ="form-control" asp-items="ViewBag.TFSTypeId"></select>
            </div>
            <div class="form-group">
                <label asp-for="JiraTypeId" class="control-label"></label>
                <select asp-for="JiraTypeId" class ="form-control" asp-items="ViewBag.JiraTypeId"></select>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

